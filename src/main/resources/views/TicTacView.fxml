<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="900.0" prefWidth="800.0" stylesheets="@../css/Main.css"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dk.easv.tictactoe.gui.controller.TicTacViewController">

    <center>
        <StackPane alignment="CENTER">
            <!-- Obrázek na pozadí -->
            <ImageView fitHeight="900.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="false">
                <image>
                    <Image url="@/images/game-bg.jpg" />
                </image>
            </ImageView>

            <!-- Tmavý overlay -->
            <StackPane style="-fx-background-color: rgba(10, 0, 30, 0.75);" />

            <!-- Herní obsah -->
            <StackPane fx:id="rootPane" alignment="CENTER">
                <!-- Herní mřížka -->
                <GridPane fx:id="gridPane" alignment="CENTER" hgap="15.0" vgap="15.0">
                    <padding>
                        <Insets top="0.0" bottom="0.0" left="0.0" right="0.0"/>
                    </padding>
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="180.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="180.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="180.0" prefWidth="180.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="180.0" prefHeight="180.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="180.0" prefHeight="180.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="180.0" prefHeight="180.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Button fx:id="btn1" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" />
                        <Button fx:id="btn2" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.columnIndex="1" />
                        <Button fx:id="btn3" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.columnIndex="2" />
                        <Button fx:id="btn4" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.rowIndex="1" />
                        <Button fx:id="btn5" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Button fx:id="btn6" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Button fx:id="btn7" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.rowIndex="2" />
                        <Button fx:id="btn8" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Button fx:id="btn9" mnemonicParsing="false" onAction="#handleButtonAction"
                                prefHeight="180.0" prefWidth="180.0" maxHeight="180.0" maxWidth="180.0" GridPane.columnIndex="2" GridPane.rowIndex="2" />
                    </children>
                </GridPane>

                <Pane fx:id="linePane" pickOnBounds="false" mouseTransparent="true" />
            </StackPane>
        </StackPane>
    </center>

    <top>
        <StackPane alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <Label fx:id="lblPlayer" text="Player 1" style="-fx-text-fill: white;">
                <font>
                    <Font name="System Bold" size="32.0" />
                </font>
            </Label>
        </StackPane>
    </top>

    <bottom>
        <StackPane alignment="CENTER" style="-fx-background-color: rgba(10, 0, 30, 0.85);" BorderPane.alignment="CENTER">
            <GridPane alignment="CENTER" hgap="20.0">
                <padding>
                    <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
                </padding>
                <columnConstraints>
                    <ColumnConstraints halignment="CENTER" />
                    <ColumnConstraints halignment="CENTER" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints valignment="CENTER" />
                </rowConstraints>
                <children>
                    <Button fx:id="btnNewGame" onAction="#handleNewGame" text="New Game"
                            prefWidth="140.0" prefHeight="40.0" GridPane.columnIndex="0" />
                    <Button fx:id="btnBackToMenu" onAction="#handleBackToMenu" text="Back to Menu"
                            prefWidth="140.0" prefHeight="40.0" GridPane.columnIndex="1" />
                </children>
            </GridPane>
        </StackPane>
    </bottom>
</BorderPane>
