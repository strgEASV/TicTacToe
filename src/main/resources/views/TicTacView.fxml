<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<BorderPane id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="400.0" stylesheets="@../css/Main.css"
            xmlns="http://javafx.com/javafx/8.0.60"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dk.easv.tictactoe.gui.controller.TicTacViewController">

    <center>
        <!-- Vrstvení tlačítek a linek -->
        <StackPane fx:id="rootPane">
            <!-- Herní mřížka -->
            <GridPane fx:id="gridPane" hgap="4.0" vgap="4.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Button fx:id="btn1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction"/>
                    <Button fx:id="btn2" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.columnIndex="1"/>
                    <Button fx:id="btn3" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.columnIndex="2"/>
                    <Button fx:id="btn4" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.rowIndex="1"/>
                    <Button fx:id="btn5" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <Button fx:id="btn6" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                    <Button fx:id="btn7" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.rowIndex="2"/>
                    <Button fx:id="btn8" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <Button fx:id="btn9" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                            mnemonicParsing="false" onAction="#handleButtonAction" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                </children>
            </GridPane>

            <!-- Vrstva pro linky -->
            <Pane fx:id="linePane" pickOnBounds="false"/>
        </StackPane>
    </center>

    <top>
        <Label fx:id="lblPlayer" text="1" BorderPane.alignment="CENTER">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
    </top>

    <bottom>
        <GridPane hgap="5" alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnNewGame"
                        text="New Game"
                        onAction="#handleNewGame"
                        GridPane.columnIndex="0" />

                <Button fx:id="btnRandomAIGame"
                        text="Random AI"
                        onAction="#handleRandomAIMove"
                        GridPane.columnIndex="1" />

                <Button fx:id="btnSmartAIGame"
                        text="Smart AI"
                        onAction="#handleSmartAIGame"
                        GridPane.columnIndex="2" />
            </children>
            <padding>
                <!-- this adds space around the *whole* GridPane -->
                <Insets top="15.0" bottom="5.0"/>
            </padding>
        </GridPane>
    </bottom>


    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>