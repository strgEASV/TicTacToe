<BorderPane id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" stylesheets="@../css/Main.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.tictactoe.gui.controller.TicTacViewController">

    <!-- Pozadí s obrázkem -->
    <center>
        <StackPane>
            <!-- Obrázek na pozadí -->
            <ImageView fitHeight="900.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@/images/game-bg.jpg" />
                </image>
            </ImageView>

            <!-- Tmavý overlay pro lepší kontrast -->
            <StackPane style="-fx-background-color: rgba(10, 0, 30, 0.7);" />

            <!-- Vrstvení tlačítek a linek -->
            <StackPane fx:id="rootPane" prefHeight="687.0" prefWidth="556.0">
                <!-- Herní mřížka -->
                <GridPane fx:id="gridPane" alignment="CENTER" hgap="10.0" prefHeight="500.0" prefWidth="500.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="200.0" prefWidth="200.0" />
