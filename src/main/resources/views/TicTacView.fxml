                        <RowConstraints minHeight="200.0" prefHeight="200.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Button fx:id="btn1" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn2" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.columnIndex="1">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn3" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.columnIndex="2">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn4" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn5" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn6" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn7" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.rowIndex="2">
                     <padding>
                        <Insets left="25.0" />
                     </padding>
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn8" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <GridPane.margin>
                        <Insets left="25.0" />
                     </GridPane.margin></Button>
                        <Button fx:id="btn9" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="180.0" prefWidth="180.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                     <padding>
                        <Insets left="25.0" />
                     </padding></Button>
                    </children>
                </GridPane>

                <Pane fx:id="linePane" pickOnBounds="false">
               <padding>
                  <Insets bottom="25.0" top="25.0" />
               </padding></Pane>
            </StackPane>
        </StackPane>
    </center>

    <top>
        <StackPane alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="100.0" top="25.0" />
            </padding>
            <Label fx:id="lblPlayer" text="Player 1">
                <font>
                    <Font size="48.0" />
                </font>
            </Label>
        </StackPane>
    </top>

    <bottom>
        <GridPane alignment="CENTER" hgap="20" style="-fx-background-color: rgba(10, 0, 30, 0.8);" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnNewGame" onAction="#handleNewGame" text="New Game" GridPane.columnIndex="0" />
                <Button fx:id="btnBackToMenu" onAction="#handleBackToMenu" text="Back to Menu" GridPane.columnIndex="1" />
            </children>
            <padding>
                <Insets bottom="25.0" left="30.0" right="30.0" top="25.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints />
