<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root"
           xmlns="http://javafx.com/javafx/8.0.60"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="dk.easv.tictactoe.gui.controller.LandingPageController"
           prefHeight="500.0" prefWidth="400.0">

    <!-- Obrázek na pozadí (přes celé okno) -->
    <ImageView fx:id="backgroundImage"
               fitHeight="500.0"
               fitWidth="400.0"
               preserveRatio="true"
               pickOnBounds="true">
        <image>
            <Image url="@/images/background.jpg" />
        </image>
    </ImageView>

    <!-- Poloprůhledný overlay -->
    <StackPane style="-fx-background-color: rgba(0, 0, 0, 0.4);" />

    <!-- Obsah -->
    <VBox alignment="CENTER" spacing="40.0">
        <padding>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
        </padding>

        <!-- Tlačítka -->
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 40 0 0 0;">

            <Button fx:id="btnMultiplayer"
                    text="MULTIPLAYER"
                    onAction="#handleMultiplayer"
                    prefWidth="200.0"
                    prefHeight="55.0"
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-cursor: hand;"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

            <Button fx:id="btnRandomAI"
                    text="RANDOM AI"
                    onAction="#handleRandomAI"
                    prefWidth="200.0"
                    prefHeight="55.0"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-cursor: hand;"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

            <Button fx:id="btnSmartAI"
                    text="SMART AI"
                    onAction="#handleSmartAI"
                    prefWidth="200.0"
                    prefHeight="55.0"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;
                           -fx-font-size: 16px; -fx-font-weight: bold;
                           -fx-background-radius: 10; -fx-cursor: hand;"
                    onMouseEntered="#handleButtonHover"
                    onMouseExited="#handleButtonExit">
                <font>
                    <Font size="16.0" />
                </font>
            </Button>

        </VBox>
    </VBox>

</StackPane>